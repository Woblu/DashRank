// prisma/schema.prisma

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// prisma/schema.prisma

model Level {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  placement   Int
  name        String
  creator     String
  verifier    String? // Added this missing field
  levelId     Int?    // REMOVED @unique from this line
  videoId     String
  description String? // Added this missing field
  list        String

  @@map("levels")
}